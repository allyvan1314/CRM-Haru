<!doctype html>
<html>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Haru - Lead Info</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css' rel='stylesheet'>
    <link href='' rel='stylesheet'>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style></style>
</head>

<body oncontextmenu='return false' class='snippet-body'>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary"style="width: 100%;">
        <div class="container-fluid" style="width: 100%;">
            <img src="https://haru-media.com/wp-content/uploads/2020/09/Haru-Logo.png">
            <input type="text" id="username" value="<%= username %>"readonly></input>
            <a href="/" class="btn btn-warning" style="margin-right:10px;">Đăng xuất</a>

        </div>
    </nav>
    <div class="container">
        <div class="row header" style="text-align:center;color:green">
            <h3>Thông tin Lead</h3>
        </div>
        <div class="col-4" style="text-align:center;">
            <a href="/addLead" class="btn btn-primary float-right"><i class="fa fa-plus mr-1"></i>Thêm Lead mới</a>
            <a href="/importExcel" class="btn btn-success float-right"><i class="fa fa-plus mr-1"></i>Thêm Lead (Excel)</a>
            <a href="/checkLead" class="btn btn-info float-right"><i class="fa fa-plus mr-1"></i>Kiểm tra thông tin lead</a>
        </div>
        <table id="example" class="table table-striped table-bordered" style="width:100%; ">
            <thead>
                <tr>
                    <th>Tên KH</th>
                    <th>CMND/CCCD</th>
                    <th>SĐT</th>
                    <th>Số tiền vay</th>
                    <th>Kỳ hạn vay</th>
                </tr>
            </thead>
            <tbody>
                <% if(leads.length> 0) { %>
                    <% for(let lead of leads) { %>
                        <tr>
                            <th scope="row">
                                <%= lead.cus_name %>
                            </th>
                            <td>
                                <%= lead.cus_id %>
                            </td>
                            <td>
                                <%= lead.cus_phone %>
                            </td>
                            <td>
                                <%= lead.loan_amount %>
                            </td>
                            <td>
                                <%= lead.loan_duration %>
                            </td>
                            <!-- <td>
                            <a href="/updateCustomer/<%= lead._id %>" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                            <a href="/deleteCustomer/<%= lead._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                        </td> -->
                        </tr>
                        <% } %>
                            <% } else { %>
                                <tr>
                                    <td>No data found</td>
                                </tr>
                                <% } %>
            </tbody>
            <tfoot>
                <tr>
                    <th>Tên KH</th>
                    <th>CMND/CCCD</th>
                    <th>SĐT</th>
                    <th>Số tiền vay</th>
                    <th>Kỳ hạn vay</th>
                </tr>
            </tfoot>
        </table>
    
        
    </div>
    <script type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js'></script>
    <script type='text/javascript'>$(document).ready(function () {
            $('#example').DataTable();
        });</script>
    
</body>

</html>