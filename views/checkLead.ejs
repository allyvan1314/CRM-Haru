<!doctype html>
<html>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Haru - Lead Info</title>
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css' rel='stylesheet'>
    <link href='' rel='stylesheet'>
    <script type='text/javascript' src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <style></style>
</head>

<body oncontextmenu='return false' class='snippet-body'>

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="width: 100%;">
        <div class="container-fluid">
            <input onclick="location.href='/allLeads';" type="image"
                src="https://haru-media.com/wp-content/uploads/2020/09/Haru-Logo.png" />
            <a href="/" class="btn btn-warning" style="float: right; margin-top: 15px;">Đăng xuất</a>
        </div>
    </nav>
    <div class="container">
        <div class="row header" style="text-align:center;color:green">
            <h3>Kiểm tra thông tin Lead</h3>
        </div>
        <form action="/checkLead" id="add_lead_form" method="post" style="margin-top:20px">
            <div class="row">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-2">
                    <label class="col-form-label" for="cus_phone">Số điện thoại KH</label>
                </div>
                <div class="col-sm-4">
                    <input type="text" class="form-control" name="cus_phone" placeholder="" id="cus_phone">
                </div>
                <div class="col-sm-3">
                    <button type="submit" onclick="myFunction()" class="btn btn-success">Tìm kiếm</button>
                    <a href="/allLeads" class="btn btn-light">Quay lại</a>                </div>
            </div>
            <div class="col-sm-2">
            </div>
            <div class="col-sm-6">
                <h2 class="col-form-label">
                    <%= found%>
                </h2>
            </div>
            <div class="col-sm-4">
            </div>
            <table id="example" class="table table-striped table-bordered" style="width:100%; margin-top:100px ">
                <thead>
                    <tr>
                        <th>SĐT</th>
                        <th>Kênh Bán</th>
                        <th>Ngày gửi VMG</th>
                        <th>VMG status</th>
                        <th>Final status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">
                            <%= phone%>
                        </th>
                        <td>
                            <%= channel%>
                        </td>
                        <td>
                            <%= send_date%>
                        </td>
                        <td>
                            <%= vmg_status%>
                        </td>
                        <td>
                            <%= final_status%>
                        </td>
                    </tr>
                </tbody>
            </table>
            
        </form>


    </div>
    <script type='text/javascript' src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js'></script>

</body>

</html>